{
  "$schema": "https://schema.tauri.app/core/schema/capability",
  "identifier": "default",
  "description": "Default capability for git-yak",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "ssh", "cmd": "ssh", "args": true, "sidecar": false }
      ]
    }
  ]
}
