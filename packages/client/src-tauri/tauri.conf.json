{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "git-yak",
  "version": "2.0.0",
  "identifier": "com.git-yak.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.png"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "git-yak",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
